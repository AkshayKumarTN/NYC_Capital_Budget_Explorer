<head>
  <meta charset="UTF-8" >
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Profile</title>

  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

  <link rel="stylesheet" href="/public/css/profile.css" >
</head>

<body>
  <header>

    <a href="/" class="nav-link">
      <h1>NYC Capital Budget Explorer</h1>
    </a>

    {{#if errorMessage}}
    <section id="error-message">
      <p>{{errorMessage}}</p>
    </section>
    {{/if}}

    <nav>
      <a href="/projects" class="nav-link">Projects</a>
      <a id="signoutLink" class="navlink" href="/logout">Sign Out</a>
    </nav>
  </header>

  <main>
    <div class="card">
      <div class="avatar">
        <span class="material-icons">person</span>
      </div>
      <h2>User Profile</h2>

      <form id="profileForm" action="/profile" method="POST" novalidate>

        <div class="grid">
          <div class="field">
            <label>First Name
              <input id="firstName" name="firstName" type="text" value="{{firstName}}" >
            </label>
            <span id="firstName-error" class="error"></span>
          </div>

          <div class="field">
            <label>Last Name
              <input id="lastName" name="lastName" type="text" value="{{lastName}}" >
            </label>
            <span id="lastName-error" class="error"></span>
          </div>

          <div class="field">
            <label>Email
              <input id="email" name="email" type="email" value="{{email}}" readonly >
            </label>
            <span id="email-error" class="error"></span>
          </div>

          <div class="field">
            <label>State
              <input id="state" type="text" value="{{state}}" readonly >
            </label>
            <span class="error"></span>
          </div>

          <div class="field">
            <label>Borough
              <select id="borough" name="borough" data-initial="{{borough}}">
                <option value="Unknown">Select Borough</option>
                <option value="Manhattan" {{#if (eq borough "Manhattan" )}}selected{{/if}}>Manhattan</option>
                <option value="Bronx" {{#if (eq borough "Bronx" )}}selected{{/if}}>Bronx</option>
                <option value="Brooklyn" {{#if (eq borough "Brooklyn" )}}selected{{/if}}>Brooklyn</option>
                <option value="Queens" {{#if (eq borough "Queens" )}}selected{{/if}}>Queens</option>
                <option value="Staten Island" {{#if (eq borough "Staten Island" )}}selected{{/if}}>Staten Island
                </option>
              </select>
            </label>
            <span id="borough-error" class="error"></span>
          </div>

          <div class="field">
            <label>Age
              <input id="age" name="age" type="number" min="1" max="100" value="{{age}}" >
            </label>
            <span id="age-error" class="error"></span>
          </div>

          <div class="field">
            <label>Gender
              <select id="gender" name="gender" data-initial="{{gender}}">
                <option value="Unknown">Select Gender</option>
                <option value="m" {{#if (eq gender "m" )}}selected{{/if}}>Male</option>
                <option value="f" {{#if (eq gender "f" )}}selected{{/if}}>Female</option>
                <option value="o" {{#if (eq gender "o" )}}selected{{/if}}>Other</option>
              </select>
            </label>
            <span id="gender-error" class="error"></span>
          </div>

          <div class="field">
            <label>Password
              <input id="password" name="password" type="password" placeholder="New password" >
            </label>
            <span id="password-error" class="error"></span>
          </div>

          <div class="field full">
            <label>Confirm Password
              <input id="confirmPassword" name="confirmPassword" type="password" placeholder="Confirm password" >
            </label>
            <span id="confirmPassword-error" class="error"></span>
          </div>
        </div>

        <div class="actions">
          <button type="submit" class="btn save">Save Changes</button>
          <button type="button" id="cancelBtn" class="btn cancel">Cancel</button>
        </div>
      </form>
    </div>
  </main>

  <script src="/public/js/profile.js"></script>
</body>